@model ElectronicsShop.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

@*<h2>Create</h2>*@

<div class="row">
    <h1 class="database-header animated fadeIn">Add New Product</h1>

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="vertical-rhythm">
                <h4 class="animated fadeIn">Please enter the details of new products you would like to add.</h4>
            </div>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

           <div class="form-group animated fadeInUp">
                <label class="control-label col-md-4">Name</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a name" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group animated fadeInUp">
                <label class="control-label col-md-4">Image URL</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.image, new { htmlAttributes = new { @class = "form-control", placeholder = "https://pixabay.com/the-shard.png" } })
                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                </div>
            </div>
           
            <div class="form-group animated fadeInUp">
                <label class="control-label col-md-4">Category</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.categoryId, new { htmlAttributes = new { @class = "form-control", placeholder = "category choose between 1 to 5" } })
                    @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
                </div>
            </div>
           
            <div class="form-group animated fadeInUp">
                <label class="control-label col-md-4">Description</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "The design of the building changed 16 times during plann..." } })
                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                </div>
            </div>
           
            <div class="form-group animated fadeInUp">
                <label class="control-label col-md-4">Price (£)</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", placeholder = "14" } })
                    @Html.ValidationMessageFor(model => model.price, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group animated fadeInUp">
                <label class="control-label col-md-4">Quantity</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter a quantity" } })
                    @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="vertical-rhythm">
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-1">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info pull-right" })

                    </div>
                    <div class="col-md-2">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </div>
            </div>
            <br />
            <br />
        </div>
    }

</div>